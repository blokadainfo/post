---
import '@styles/global.css';
import '@styles/fonts.css';
import { siteMeta } from '@lib/site';

import TemplateClientMount from '@components/TemplateClientMount.astro';
---

<!doctype html>
<html class="h-full" lang={siteMeta.locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={siteMeta.favicon} />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="darkreader-lock" />
    <meta name="color-scheme" content="dark" />

    <link
      rel="preload"
      href="/fonts/akzidenz-grotesk-pro-bold-condensed.otf"
      as="font"
      type="font/otf"
      crossorigin="anonymous"
    />

    <style>
      @font-face {
        font-family: 'Akzidenz Grotesk Pro';
        src: url('/fonts/akzidenz-grotesk-pro-bold-condensed.otf') format('opentype');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      html,
      body {
        background: black;
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body class="h-full">
    <slot />
    <TemplateClientMount />
  </body>
</html>
