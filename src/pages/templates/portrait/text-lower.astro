---
import Layout from "@layouts/Template.astro";
import Logo from "@assets/logo.svg";
---

<Layout viewportWidth={1080}>
  <!-- 1080Ã—1350 canvas -->
  <div id="post" class="relative w-[1080px] h-[1350px] overflow-hidden bg-black">
    <!-- Background -->
    <img
      id="bg"
      alt=""
      aria-hidden="true"
      class="absolute inset-0 z-0 w-full h-full object-cover grayscale"
    />

    <!-- Darken overlay (controlled by client) -->
    <div
      id="shade"
      class="absolute inset-0 z-10 bg-black pointer-events-none"
      style="opacity:0;"
    ></div>

    <!-- Gradient overlay -->
    <div
      class="absolute inset-0 z-20 w-full h-full bg-gradient-to-t from-black from-10% to-transparent"
    ></div>

    <!-- Foreground content -->
    <div
      class="absolute inset-0 z-30 p-8 text-white font-[Akzidenz_Grotesk_Pro]"
    >
      <!-- Logo -->
      <img
        src={Logo.src}
        alt="Logo"
        class="absolute top-10 right-9 size-30 drop-shadow-lg"
      />

      <!-- Main text block -->
      <div class="absolute bottom-50 left-20 max-w-[75%]">
        <!-- Accent lines -->
        <div class="mb-8 space-y-6">
          <div class="h-2 w-5/12 bg-[#50C2BE]"></div>
          <div class="h-2 w-full bg-[#DB2340]"></div>
        </div>

        <!-- Paragraph -->
        <p
          id="paragraph"
          class="text-[46px] leading-tight text-justify hyphens-auto break-words drop-shadow-lg"
        ></p>
      </div>

      <!-- Footer -->
      <div class="text-[42px] absolute left-9 bottom-12 drop-shadow-lg">
        <span>foto: </span><span id="credit"></span>
      </div>

      <div class="text-[42px] absolute right-9 bottom-12 drop-shadow-lg">
        <span>blokada.info</span>
      </div>
    </div>
  </div>
</Layout>
