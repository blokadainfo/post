---
import Layout from '@layouts/Template.astro';
import Logo from '@assets/logo.svg';
---

<Layout viewportWidth={1080}>
  <!-- 1080Ã—1350 canvas -->
  <div id="post" class="relative h-[1350px] w-[1080px] overflow-hidden bg-black">
    <!-- Background -->
    <img
      id="bg"
      alt=""
      aria-hidden="true"
      class="absolute inset-0 z-0 h-full w-full object-cover grayscale"
    />

    <!-- Darken overlay (controlled by client) -->
    <div id="shade" class="pointer-events-none absolute inset-0 z-10 bg-black" style="opacity:0;">
    </div>

    <!-- Gradient overlay -->
    <div
      class="absolute inset-0 z-20 h-full w-full bg-gradient-to-t from-black from-10% to-black/0"
    >
    </div>

    <!-- Foreground content -->
    <div class="absolute inset-0 z-30 p-8 font-[Akzidenz_Grotesk_Pro] text-white">
      <!-- Logo -->
      <img src={Logo.src} alt="Logo" class="absolute top-10 right-9 size-30 drop-shadow-lg" />

      <!-- Main text block -->
      <div class="absolute top-24 left-20 max-w-[75%]">
        <!-- Paragraph -->
        <p
          id="paragraph"
          class="text-justify text-[46px] leading-tight break-words hyphens-auto drop-shadow-lg"
        >
        </p>

        <!-- Accent lines -->
        <div class="mt-8 space-y-6">
          <div class="h-2 w-full bg-[#DB2340]"></div>
          <div class="h-2 w-5/12 bg-[#50C2BE]"></div>
        </div>
      </div>

      <!-- Footer -->
      <div class="absolute bottom-12 left-9 text-[42px] drop-shadow-lg">
        <span>foto: </span><span id="credit"></span>
      </div>

      <div class="absolute right-9 bottom-12 text-[42px] drop-shadow-lg">
        <span>blokada.info</span>
      </div>
    </div>

    <!-- Hairline fix -->
    <div class="pointer-events-none absolute inset-0 z-40 shadow-[inset_0_0_0_1px_#000]"></div>
  </div>
</Layout>
